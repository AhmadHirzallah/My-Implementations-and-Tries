{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug my_program",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/my_program", // Change this to your executable name
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build" // Connects to your build task
        }
    ]
}
